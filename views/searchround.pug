extends layout/base.pug

block content
  .d-sm-flex.justify-content-between.align-items-center.mb-4
    h3.text-dark.mb-0 Search for a Round
  .row
    .col-lg-6.mb-4
      .card.shadow.mb-4
        .card-header.py-3
          h6.text-primary.font-weight-bold.m-0 Search Criteria
        .card-body#roundtimer
          a.card-link#fullscreen(href='#')
          form
            .form-group
              label Round ID
              input.form-control(type='search')
            .form-group
              label Room
              input.form-control(type='search')
            .form-group
              label Motion
              input.form-control(type='search')
          a.card-link.btn.btn-primary(href='roundroomStatistics.html') Find Round
