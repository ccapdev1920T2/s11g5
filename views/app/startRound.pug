extends layout/base.pug

block content
  .d-sm-flex.justify-content-between.align-items-center.mb-4
    h3.text-dark.mb-0 Create a New Debate Match
  .row
    .col-lg-6.mb-4
      .card.shadow.mb-4
        .card-header.py-3
          h6.text-primary.font-weight-bold.m-0 Match Info
        .card-body#roundtimer
          a.card-link#fullscreen(href='#')
          form
            .form-group
              label Room
              input.form-control(type='text')
            .form-group
              label Motion
              textarea.form-control
          a.card-link.btn.btn-primary(href='/roundroomPending/') Start Round
