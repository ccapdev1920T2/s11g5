extends ../layout/base.pug

block content
  h3.text-dark.mb-4 Edit a Team
  .row.mb-3
    .col-lg-8
      .row
        .col
          .card.shadow.mb-3
            .card-header.py-3
              p.text-primary.m-0.font-weight-bold Edit a Team
            .card-body
              form.user(action="/editTeams", method="post")
                .form-row
                  .col
                    .form-group
                      label(for='teamname')
                        strong Choose a Team to Edit:
                      if (pagedetails.choosing == 1)
                        select#teamname.form-control(name='teamname' style='border: 1px solid #d66')
                          option(value='choose') Choose an option
                          if(pagedetails.teams.length > 0)
                            each team in pagedetails.teams
                              option(value=team.teamname) #{team.teamname}
                      else
                        select#teamname.form-control(name='teamname')
                          option(value='choose') Choose an option
                          if(pagedetails.teams.length > 0)
                            each team in pagedetails.teams
                              option(value=team.teamname) #{team.teamname}
                if (pagedetails.choosing == 1)
                  .text-center.small(style="color: #d66") Choose one team to edit
                .form-row
                  .col
                    .form-group
                      button.btn.btn-primary.btn-sm(type='submit') Next
