extends ../layout/base.pug


block content
  .d-sm-flex.justify-content-between.align-items-center.mb-4
    h3.text-dark.mb-0 Hi #{pagedetails.curr_user.first_name}! Here's your Teams Dashboard
  .row.justify-content-center(style='padding-top: 43px;')
    .col-md-6.col-xl-3
      .card.shadow.mb-4
        .card-header.d-flex.justify-content-between.align-items-center.bg-danger
          h6.text-primary.font-weight-bold.m-0.text-light Create a Team
        .card-body.text-center
          br
          a.card-link(href='/createTeam')
            i.fa.fa-user-plus.text-danger(style='font-size: 59px;')
          br
          br
          h1.text-center.text-dark(style='font-size: 30px;') Create a Team
    .col-md-6.col-xl-3
      .card.shadow.mb-4
        .card-header.d-flex.justify-content-between.align-items-center.bg-warning
          h6.text-warning.font-weight-bold.m-0.text-light Edit a Team
        .card-body.text-center
          br
          a.card-link(href='/chooseTeam')
            i.fa.fa-address-book-o.text-warning(style='font-size: 59px;')
          br
          br
          h1.text-center.text-dark(style='font-size: 30px;') Edit a Team
    .col-md-6.col-xl-3
      .card.shadow.mb-4
        .card-header.d-flex.justify-content-between.align-items-center.bg-success
          h6.text-info.font-weight-bold.m-0.text-light My Teams
        .card-body.text-center
          br
          a.card-link(href='/teamList')
            i.fa.fa-users.text-success(style='font-size: 59px;')
          br
          br
          h1.text-center.text-dark(style='font-size: 30px;') My Teams
    .col-md-6.col-xl-3
      .card.shadow.mb-4
        .card-header.d-flex.justify-content-between.align-items-center.bg-primary
          h6.text-success.font-weight-bold.m-0.text-light Team Updates
        .card-body.text-center
          br
          a.card-link(href='/teamUpdates')
            i.fa.fa-address-card-o.text-primary(style='font-size: 59px;')
          br
          br
          h1.text-center.text-dark(style='font-size: 30px;') Team Updates
