extends ../layout/base.pug

block content
      .container-fluid
        .card.shadow
          .card-header.py-3
            p.text-primary.m-0.font-weight-bold Ongoing Rounds for #{pagedetails.curr_user.full_name}
          .card-body
            #dataTable.table-responsive.table.mt-2(role='grid' aria-describedby='dataTable_info')
              table#dataTable.table.dataTable.my-0
                thead
                  tr
                    th Round ID
                    th Motion
                    th Adjudicator
                    th Gov
                    th Opp
                tbody
                  if (pagedetails.matches.length > 0)
                    each match in pagedetails.matches
                      tr
                        td
                          a(href='/ongoingRound?roundID='+match.roundID) #{match.roundID}
                        td #{match.motion}
                        td #{match.adjudicator.full_name}
                        td #{match.gov.teamname}
                        td #{match.opp.teamname}
                    tr
                      td.text-center(colspan=10) You have no more ongoing rounds
                  else
                    tr
                      td
                        td.text-center(colspan=10) No Ongoing Rounds. Click on Start a New Round to Create a Round!
