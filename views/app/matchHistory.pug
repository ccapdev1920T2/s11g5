extends layout/base.pug

block content
  .row
    .col-md-6.col-xl-3.mb-4
      .card.shadow.border-left-primary.py-2
        .card-body
          .row.align-items-center.no-gutters
            .col.mr-2
              .text-uppercase.text-primary.font-weight-bold.text-xs.mb-1
                span Last debate
              .text-dark.font-weight-bold.h5.mb-0
                span March 2, 2020
            .col-auto
              i.fas.fa-calendar.fa-2x.text-gray-300
    .col-md-6.col-xl-3.mb-4
      .card.shadow.border-left-success.py-2
        .card-body
          .row.align-items-center.no-gutters
            .col.mr-2
              .text-uppercase.text-success.font-weight-bold.text-xs.mb-1
                span Average speaks
              .text-dark.font-weight-bold.h5.mb-0
                span 73.5
            .col-auto
              i.fas.fa-microphone.fa-2x.text-gray-300
    .col-md-6.col-xl-3.mb-4
      .card.shadow.border-left-info.py-2
        .card-body
          .row.align-items-center.no-gutters
            .col.mr-2
              .text-uppercase.text-info.font-weight-bold.text-xs.mb-1
                span Win/Loss ratio
              .row.no-gutters.align-items-center
                .col-auto
                  .text-dark.font-weight-bold.h5.mb-0.mr-3
                    span 50%
                .col
                  .progress.progress-sm
                    .progress-bar.bg-info(aria-valuenow='50' aria-valuemin='0' aria-valuemax='100' style='width: 50%;')
                      span.sr-only 50%
            .col-auto
              i.fas.fa-trophy.fa-2x.text-gray-300
    .col-md-6.col-xl-3.mb-4
      .card.shadow.border-left-warning.py-2
        .card-body
          .row.align-items-center.no-gutters
            .col.mr-2
              .text-uppercase.text-warning.font-weight-bold.text-xs.mb-1
                span Debates
              .text-dark.font-weight-bold.h5.mb-0
                span 5
            .col-auto
              i.fas.fa-comments.fa-2x.text-gray-300
  .row
    .col-lg-7.col-xl-8
      .card.shadow.mb-4
        .card-header.d-flex.justify-content-between.align-items-center
          h6.text-primary.font-weight-bold.m-0 Performance Overview
        .card-body
          .chart-area
            .chartjs-size-monitor
              .chartjs-size-monitor-expand
                div
              .chartjs-size-monitor-shrink
                div
            canvas.chartjs-render-monitor(data-bs-chart='{"type":"line","data":{"labels":["January 6, 2020", "February 18, 2020", "February 22, 2020", "March 1, 2020","March 2, 2020"],"datasets":[{"label":"Score","fill":true,"data":["80","72","69","73","81"],"backgroundColor":"rgba(78, 115, 223, 0.05)","borderColor":"rgba(78, 115, 223, 1)"}]},"options":{"maintainAspectRatio":false,"legend":{"display":false},"title":{},"scales":{"xAxes":[{"gridLines":{"color":"rgb(234, 236, 244)","zeroLineColor":"rgb(234, 236, 244)","drawBorder":false,"drawTicks":false,"borderDash":["2"],"zeroLineBorderDash":["2"],"drawOnChartArea":false},"ticks":{"fontColor":"#858796","padding":20}}],"yAxes":[{"gridLines":{"color":"rgb(234, 236, 244)","zeroLineColor":"rgb(234, 236, 244)","drawBorder":false,"drawTicks":false,"borderDash":["2"],"zeroLineBorderDash":["2"]},"ticks":{"fontColor":"#858796","padding":20}}]}}}' style='display: block; width: 699px; height: 320px;' width='699' height='320')
    .col-lg-5.col-xl-4
      .card.shadow.mb-4
        .card-header.d-flex.justify-content-between.align-items-center
          h6.text-primary.font-weight-bold.m-0 Win/Loss Ratio
        .card-body
          .chart-area
            canvas(data-bs-chart='{"type":"doughnut","data":{"labels":["Wins","Losses"],"datasets":[{"label":"","backgroundColor":["#4e73df","#1cc88a","#36b9cc"],"borderColor":["#ffffff","#ffffff","#ffffff"],"data":["50","50"]}]},"options":{"maintainAspectRatio":false,"legend":{"display":false},"title":{}}}')
          .text-center.small.mt-4
            span.mr-2
              i.fas.fa-circle.text-primary
              |  Wins
            span.mr-2
              i.fas.fa-circle.text-success
              |  Losses

  .card.shadow
    .card-header.py-3
      p.text-primary.m-0.font-weight-bold Match History for John
    .card-body
      .row
        .col-md-6.text-nowrap
          //- #dataTable_length.dataTables_length(aria-controls='dataTable')
          //-   label
          //-     | Show Items 
          //-     select.form-control.form-control-sm.custom-select.custom-select-sm
          //-       option(value='10' selected) 10
          //-       option(value='25') 25
          //-       option(value='50') 50
          //-       option(value='100') 100
          //-     |  
        .col-md-6
          .text-md-right.dataTables_filter#dataTable_filter
            label
              input.form-control.form-control-sm(type='search' aria-controls='dataTable' placeholder='Search')
      .table-responsive.table.mt-2#dataTable(role='grid' aria-describedby='dataTable_info')
        table.table.dataTable.my-0#dataTable
          thead
            tr
              th Round ID
              th Room
              th Motion
              th Gov
              th Opp 
              th Gov Score
              th Opp Score
              th Winner
              th Your Role
              th Your Score
          tbody
            if (matches.length > 0)
              each match in matches
                tr
                  td
                    a(href='roundroomStatistics.html') #{match.roundID}
                  td G306B
                  td #{match.motion}
                  td(class=(match.winner === "Gov" ? "border-left-success" : "border-left-danger"))
                    | #{match.gov}
                  td(class=(match.winner === "Opp" ? "border-left-success" : "border-left-danger"))
                    | #{match.opp}
                  td #{match.govscore}
                  td #{match.oppscore}
                  td #{match.winner}
                  td #{match.role}
                  td #{match.rolescore}
            tr
              td.text-center(colspan=10) You have no more matches
