extends layout/layout.pug

block variables

append stylesheets
  link(href='/assets/css/debate-timer.css', rel='stylesheet', type='text/css')
  link(href='http://www.cssscript.com/wp-includes/css/sticky.css', rel='stylesheet', type='text/css')

block content
  .container-fluid
    .d-sm-flex.justify-content-between.align-items-center.mb-4
      h3.text-dark.mb-0 Room #{roomno}
    .d-sm-flex.justify-content-between.align-items-center.mb-4
      h4.text-dark.mb-0 Motion: #{motion}
    .row
      .col-lg-7.col-xl-6
        .card.shadow.mb-4
          .card-header.d-flex.justify-content-between.align-items-center
            h6.text-primary.font-weight-bold.m-0 Timer
            .dropdown.no-arrow
              button.btn.btn-link.btn-sm.dropdown-toggle(data-toggle='dropdown', aria-expanded='false', type='button')
                i.fas.fa-ellipsis-v.text-gray-400
              .dropdown-menu.shadow.dropdown-menu-right.animated--fade-in(role='menu')
                p.text-center.dropdown-header dropdown header:
                a.dropdown-item(role='presentation', href='#')  Action
                a.dropdown-item(role='presentation', href='#')  Another action
                .dropdown-divider
                a.dropdown-item(role='presentation', href='#')  Something else here
          .card-body
            include roundroom/timer.pug
      .col
        .row
          .col-lg-6
            h5.text-center GOV: #{gov}
          .col-lg-6
            h5.text-center OPP: #{opp}
          .col-lg-6.mb-4
            .card.text-white.bg-primary.shadow
              .card-body
                p.m-0 #{pm}
                p.text-white-50.small.m-0 PM
          .col-lg-6.mb-4
            .card.text-white.bg-success.shadow
              .card-body
                p.m-0 #{lo}
                p.text-white-50.small.m-0 LO
          .col-lg-6.mb-4
            .card.text-white.bg-info.shadow
              .card-body
                p.m-0
                  | #{dpm}
                  br
                p.text-white-50.small.m-0 DPM
          .col-lg-6.mb-4
            .card.text-white.bg-warning.shadow
              .card-body
                p.m-0 #{dlo}
                p.text-white-50.small.m-0 DLO
          .col-lg-6.mb-4
            .card.text-white.bg-danger.shadow
              .card-body
                p.m-0
                  | #{gw}
                  br
                p.text-white-50.small.m-0 GW
          .col-lg-6.mb-4
            .card.text-white.bg-secondary.shadow
              .card-body
                p.m-0 #{ow}
                p.text-white-50.small.m-0 OW
    .row
      .col-md-6.col-xl-3.mb-4
        .card.shadow.border-left-primary.py-2
          .card-body
            .row.align-items-center.no-gutters
              .col.mr-2
                .text-uppercase.text-primary.font-weight-bold.text-xs.mb-1
                  span Earnings (monthly)
                .text-dark.font-weight-bold.h5.mb-0
                  span $40,000
              .col-auto
                i.fas.fa-calendar.fa-2x.text-gray-300
      .col-md-6.col-xl-3.mb-4
        .card.shadow.border-left-success.py-2
          .card-body
            .row.align-items-center.no-gutters
              .col.mr-2
                .text-uppercase.text-success.font-weight-bold.text-xs.mb-1
                  span Earnings (annual)
                .text-dark.font-weight-bold.h5.mb-0
                  span $215,000
              .col-auto
                i.fas.fa-dollar-sign.fa-2x.text-gray-300
      .col-md-6.col-xl-3.mb-4
        .card.shadow.border-left-info.py-2
          .card-body
            .row.align-items-center.no-gutters
              .col.mr-2
                .text-uppercase.text-info.font-weight-bold.text-xs.mb-1
                  span Tasks
                .row.no-gutters.align-items-center
                  .col-auto
                    .text-dark.font-weight-bold.h5.mb-0.mr-3
                      span 50%
                  .col
                    .progress.progress-sm
                      .progress-bar.bg-info(aria-valuenow='50', aria-valuemin='0', aria-valuemax='100', style='width: 50%;')
                        span.sr-only 50%
              .col-auto
                i.fas.fa-clipboard-list.fa-2x.text-gray-300
      .col-md-6.col-xl-3.mb-4
        .card.shadow.border-left-warning.py-2
          .card-body
            .row.align-items-center.no-gutters
              .col.mr-2
                .text-uppercase.text-warning.font-weight-bold.text-xs.mb-1
                  span Pending Requests
                .text-dark.font-weight-bold.h5.mb-0
                  span 18
              .col-auto
                i.fas.fa-comments.fa-2x.text-gray-300



append scripts
  script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.dev.js")
  script(src="/assets/js/testdebatetimer.js")
